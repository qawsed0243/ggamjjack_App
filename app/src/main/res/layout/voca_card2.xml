<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="16dp">

    <com.ssomai.android.scalablelayout.ScalableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        sl:scale_base_height="163"
        sl:scale_base_width="310"
        android:layout_centerHorizontal="true">

    <android.support.v7.widget.CardView
        android:id="@+id/voca_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card:cardCornerRadius="3dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="0dp"
        sl:scale_height="163"
        sl:scale_width="310">

        <LinearLayout
            android:id="@+id/front"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            sl:scale_height="163"
            sl:scale_width="310">

            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                sl:scale_base_height="163"
                sl:scale_base_width="310"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/word"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text"
                    android:textSize="25sp"
                    sl:scale_height="39"
                    sl:scale_left="55"
                    sl:scale_textsize="25"
                    sl:scale_top="44"
                    sl:scale_width="200" />

                <TextView
                    android:id="@+id/voca_gram"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="37dp"
                    android:background="@drawable/round"
                    android:gravity="center"
                    android:lineSpacingExtra="5.7sp"
                    android:text="ad"
                    android:textColor="#ffffff"
                    sl:scale_height="26"
                    sl:scale_left="121.5"
                    sl:scale_textsize="22.8"
                    sl:scale_top="100"
                    sl:scale_width="67"/>

    </com.ssomai.android.scalablelayout.ScalableLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            sl:scale_height="163"
            sl:scale_width="310">
            <com.ssomai.android.scalablelayout.ScalableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                sl:scale_base_height="163"
                sl:scale_base_width="310"
                android:layout_centerHorizontal="true"
                >

            <ImageButton
                android:id="@+id/myvoca_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:src="@android:drawable/ic_delete"
                sl:scale_height="25"
                sl:scale_left="275"
                sl:scale_top="10"
                sl:scale_width="25"/>

                <TextView
                    android:id="@+id/mean1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:text="-에 대하여"
                    android:textColor="@color/text"
                    sl:scale_height="29"
                    sl:scale_left="55"
                    sl:scale_textsize="25"
                    sl:scale_top="25"
                    sl:scale_width="200"/>

                <TextView
                    android:id="@+id/mean2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:text="-에 대하여"
                    android:textColor="@color/text"
                    sl:scale_height="29"
                    sl:scale_left="55"
                    sl:scale_textsize="25"
                    sl:scale_top="55"
                    sl:scale_width="200"/>

                <TextView
                    android:id="@+id/mean3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:lineSpacingExtra="4sp"
                    android:text="-에 대하여"
                    android:textColor="@color/text"
                    sl:scale_height="29"
                    sl:scale_left="55"
                    sl:scale_textsize="25"
                    sl:scale_top="82"
                    sl:scale_width="200" />

            <ImageButton
                android:id="@+id/goto_dic"
                android:layout_width="133sp"
                android:layout_height="25sp"
                android:layout_gravity="center"
                android:src="@drawable/explain_button"
                sl:scale_height="25"
                sl:scale_left="88.5"
                sl:scale_top="124"
                sl:scale_width="133"/>
            </com.ssomai.android.scalablelayout.ScalableLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
    </com.ssomai.android.scalablelayout.ScalableLayout>
</FrameLayout>