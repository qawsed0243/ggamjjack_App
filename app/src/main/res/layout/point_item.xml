<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:id="@+id/point_item"
    android:background="@color/white"
    android:weightSum="1"
    android:layout_marginBottom="13dp">
<ImageView
    android:layout_marginLeft="40dp"
    android:layout_width="45sp"
    android:layout_height="45sp"
    android:id="@+id/imageview"
    android:layout_marginTop="2.5sp"
    android:layout_marginBottom="2.5sp"
    />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:orientation="vertical"
        android:layout_marginLeft="29dp"
        android:layout_marginRight="75dp">

        <TextView
            android:id="@+id/textViewDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="14sp"
            android:text="날짜"
            android:layout_weight="0.33"></TextView>

        <TextView
            android:id="@+id/textViewWhy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textSize="14sp"
            android:text="이유"
            android:layout_weight="0.48"></TextView>
    </LinearLayout>

    <TextView
        android:id="@+id/textViewPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="포인트"
        android:textSize="20sp"
        android:layout_weight="0.16"
        android:layout_gravity=""
        android:textColor="#209cd8"
        android:paddingTop="12.5sp"></TextView>

</LinearLayout>









