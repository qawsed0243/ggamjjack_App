<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="500dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="320dp"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/point_back"
            android:id="@+id/img_result">
        </ImageView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="44sp"
                android:textColor="@color/text"
                android:id="@+id/correct"
                android:layout_marginLeft="127dp"
                android:layout_weight="1" />

            <TextView
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="44sp"
                android:textColor="#9c9c9d"
                android:layout_weight="1" />

            <TextView
                android:text="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="44sp"
                android:textColor="#9c9c9d"
                android:id="@+id/total_num"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="25.6sp"
            android:textColor="#636464"
            android:gravity="center"
            android:text="포인트를 받을 수 있어요!"
            android:id="@+id/tv_result" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            android:textColor="#636464"
            android:gravity="center"
            android:text="" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp">

            <Button
                android:text="포인트 받기"
                android:layout_width="120dp"
                android:layout_height="39dp"
                android:background="@drawable/refund_button"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:gravity="center"
                android:id="@+id/addpoint"
                android:layout_marginLeft="33dp"
                android:layout_marginRight="25dp"
                android:layout_weight="1" />

            <Button
                android:text="메인화면"
                android:layout_width="120dp"
                android:layout_height="39dp"
                android:background="@drawable/shopping_button"
                android:textColor="@color/white"
                android:textSize="21sp"
                android:gravity="center"
                android:id="@+id/morestudy"
                android:layout_marginRight="33dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>